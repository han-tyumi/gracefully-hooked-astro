---
import Footer from 'components/Footer.astro'
import Header from 'components/Header.astro'

import Layout from 'layouts/Layout.astro'

export interface Props {
  title: string
  noHeader?: boolean
}

const { title, noHeader } = Astro.props as Props
---

<Layout title={title}>
  {!noHeader && <Header />}
  <slot></slot>
  <Footer />
</Layout>
